---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'ul'> {}

const { class: className, ...attrs } = Astro.props;
---

<ul
	class={`c-location-list${className ? ` | ${className}` : ''}`}
	{...attrs}
	role="list"
>
	<slot />
</ul>

<style lang="scss">
	.c-location-list {
		&:global(> li:not(.c-location-list__item)) {
			padding: var(--space-6);
			text-align: center;
		}
	}
</style>
